<!-- form handling -->
<form action="/address/add-user" method="POST" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="title" class="text-light">Title</label>
      <input type="hidden" name="id" value="" />
      <input
        type="text"
        name="title"
        value="<%= typeof name != 'undefined' ? title : '' %>"
        placeholder="whats ur title"
      />
    </div>
    <div class="form-group">
      <label for="address1" class="text-light">Address line 1</label>
      <input
        type="text"
        name="address1"
        value="<%= typeof name != 'undefined' ? address1 : '' %>"
        placeholder="Address 1"
      />
    </div>
    <div class="form-group">
      <label for="address2" class="text-light">Address line 2</label>
      <input
        type="text"
        name="address2"
        value="<%= typeof name != 'undefined' ? address2 : '' %>"
        placeholder="Address 2"
      />
    </div>
    <div class="form-group">
      <label for="country" class="text-light">Country</label>
      <input
        type="text"
        name="country"
        value="<%= typeof name != 'undefined' ? country : '' %>"
        placeholder="Country"
      />
    </div>
    <div class="form-group">
      <label for="state" class="text-light">State</label>
      <input
        type="text"
        name="state"
        value="<%= typeof name != 'undefined' ? state : '' %>"
        placeholder="State"
      />
    </div>
    <div class="form-group">
      <label for="city" class="text-light">City</label>
      <input
        type="text"
        name="city"
        value="<%= typeof name != 'undefined' ? city : '' %>"
        placeholder="City"
      />
    </div>
    <div class="form-group">
      <label for="pincode" class="text-light">Pincode</label>
      <input
        type="text"
        name="pincode"
        value="<%= typeof name != 'undefined' ? pincode : '' %>"
        placeholder="Pincode"
      />
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
